{
  "name": "wollbach",
  "version": "19.11.27",
  "description": "Website for Wollbach",
  "keywords": [
    "Wollbach",
    "Website",
    "Kandern"
  ],
  "author": "Markus Lindenmann <tiliavir@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiliavir/wollbach-website.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 9-11"
  ],
  "devDependencies": {
    "@types/jquery": "3.3.31",
    "@types/lunr": "2.3.2",
    "@types/node": "13.1.6",
    "@types/photoswipe": "4.0.29",
    "autoprefixer": "9.7.3",
    "copyfiles": "2.1.1",
    "lite-server": "2.5.4",
    "node-sass": "4.13.0",
    "postcss-cli": "7.1.0",
    "sass-lint": "1.13.1",
    "tslint": "5.20.1",
    "typescript": "3.7.4"
  },
  "dependencies": {
    "jquery": "3.4.1",
    "lunr": "2.3.8",
    "mvw-gallery": "1.0.19",
    "mvw-creator": "1.3.7",
    "photoswipe": "4.1.3"
  },
  "scripts": {
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint --project ./ && mvwc-lint",
    "clean": "rimraf ./build/ ./partials/{styles,scripts}/**/*.{css,js}",
    "postclean": "mkdir build",
    "compile:sass": "node-sass ./partials/styles/ -o ./partials/styles && postcss ./partials/styles/**/*.css -r --use autoprefixer --no-map",
    "compile:ts": "tsc -p tsconfig.json",
    "compile": "npm run compile:ts && npm run compile:sass && mvwc",
    "copy:lib": "copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js ./build/js/ && copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/*.{svg,png,gif} ./build/",
    "copy:root": "copyfiles -u 2 ./root/_*/* ./build/ && copyfiles -u 1 -a ./root/[!_]* ./build/ && copyfiles -u 1 ./root/[!_]*/**/* ./build/",
    "copy": "npm run copy:lib && npm run copy:root",
    "gallery": "mvwGallery ./gallery-source/ ./root/gallery/",
    "prerelease": "npm run lint",
    "release": "npm run compile && npm run copy",
    "postrelease": "copyup -u 1 -a ./build/**/* ./_prod/artifacts/",
    "serve": "lite-server"
  }
}
