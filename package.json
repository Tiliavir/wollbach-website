{
  "name": "wollbach",
  "version": "17.10.20",
  "description": "Website for Wollbach",
  "keywords": [
    "Wollbach",
    "Website",
    "Kandern"
  ],
  "author": "Markus Lindenmann <tiliavir@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://tiliavir.visualstudio.com/DefaultCollection/Website%20Wollbach/_git/wollbach-website"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 9-11"
  ],
  "devDependencies": {
    "@types/jquery":"3.2.15",
    "@types/lunr": "2.1.2",
    "@types/node": "8.0.46",
    "@types/photoswipe": "4.0.28",

    "autoprefixer": "7.1.5",
    "copyfiles": "1.2.0",
    "lite-server": "2.3.0",
    "node-sass": "4.5.3",
    "postcss-cli": "4.1.1",
    "sass-lint": "1.12.1",
    "tslint": "5.7.0",
    "typescript": "2.5.3"
  },
  "dependencies": {
    "jquery": "3.2.1",
    "lunr": "2.1.4",
    "mvw-gallery": "1.0.10",
    "mvw-creator": "1.1.2",
    "photoswipe": "4.1.2"
  },
  "scripts": {
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint -c tslint.json \"partials/scripts/**/*.ts\" && mvwc-lint",
    "clean": "rimraf ./build/ ./partials/{styles,scripts}/**/*.{css,js}",

    "precompile": "npm run clean && mkdir build",
    "compile": "npm run compile:ts && npm run compile:sass && mvwc",
    "compile:ts": "tsc -p tsconfig.json",
    "compile:sass": "node-sass ./partials/styles/ -o ./partials/styles && postcss ./partials/styles/**/*.css --use autoprefixer -r",
    "compile:gallery": "mvwGallery ./gallery-source/ ./root/gallery/",

    "copy:lib": "copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js ./build/js/ && copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/*.{svg,png,gif} ./build/",
    "copy:root": "copyfiles -u 2 ./root/_*/* ./build/ && copyfiles -u 1 -a ./root/[!_]* ./build/ && copyfiles -u 1 ./root/[!_]*/**/* ./build/",
    "postcompile": "npm run copy:lib && npm run copy:root",

    "prerelease": "npm run lint",
    "release": "npm run compile",

    "copy:todiff": "copyup ./build/**/* ../wollbach-prod/",

    "serve": "lite-server"
  }
}
