{
  "name": "wollbach",
  "version": "17.3.0",
  "description": "Website for Wollbach",
  "keywords": [
    "Wollbach",
    "Website",
    "Kandern"
  ],
  "author": "Markus Lindenmann <markus.lindenmann@web.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://tiliavir.visualstudio.com/DefaultCollection/Website%20Wollbach/_git/wollbach-website"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 9-11"
  ],
  "devDependencies": {
    "@types/bootstrap": "^3.3.32",
    "@types/gulp": "^4.0.0",
    "@types/gulp-load-plugins": "^0.0.28",
    "@types/grecaptcha": "^2.0.31",
    "@types/lunr": "^0.5.28",
    "@types/marked": "^0.0.28",
    "@types/node": "^7.0.8",
    "@types/vinyl": "^2.0.0",
    "@types/yargs": "^6.6.0",

    "autoprefixer": "^6.7.7",
    "copyfiles": "^1.2.0",
    "node-sass": "^4.5.0",
    "postcss-cli": "^2.6.0",
    "sass-lint": "^1.10.2",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "gulp": "^3.9.1",
    "gulp-data": "^1.2.1",
    "gulp-sequence": "^0.4.6",
    "gulp-flatten": "^0.3.1",
    "gulp-gray-matter": "^3.0.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-pug": "^3.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sitemap": "^4.2.0",

    "jquery": "^3.1.1",
    "jstransformer-marked": "^1.0.2",
    "lunr": "^1.0.0",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "mvw-navigation": "^2.0.1",
    "mvw-search-index": "^1.0.7",
    "pug": "^2.0.0-beta11"
  },
  "scripts": {
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint -c tslint.json \"partials/scripts/**/*.ts\"",
    "clean": "rimraf ./build/ ./partials/{styles,scripts}/**/*.{css,js}",

    "precompile": "npm run clean && mkdir build",
    "compile": "tsc && npm run compile:sass && gulp",
    "compile:sass": "node-sass ./partials/styles/ -o ./partials/styles && postcss --use autoprefixer ./partials/styles/**/*.css -r",

    "copy:lib": "copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js ./build/js/",
    "copy:root": "copyfiles -u 2 ./root/_*/* ./build/ && copyfiles -u 1 -a ./root/[!_]* ./build/ && copyfiles -u 1 ./root/[!_]*/**/* ./build/",
    "copy": "npm run copy:lib && npm run copy:root",

    "prerelease": "npm run lint",
    "release": "npm run compile -- release --release=true && npm run copy",

    "dev": "npm run compile && npm run copy && copyup ./build/**/* ../wollbach-prod/"
  }
}
