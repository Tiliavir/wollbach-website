{
  "name": "wollbach",
  "version": "1.0.170809",
  "description": "Website for Wollbach",
  "keywords": [
    "Wollbach",
    "Website",
    "Kandern"
  ],
  "author": "Markus Lindenmann <tiliavir@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://tiliavir.visualstudio.com/DefaultCollection/Website%20Wollbach/_git/wollbach-website"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 9-11"
  ],
  "devDependencies": {
    "@types/gulp": "4.0.4",
    "@types/gulp-load-plugins": "0.0.29",
    "@types/jquery":"3.2.11",
    "@types/lunr": "0.5.29",
    "@types/marked": "0.3.0",
    "@types/node": "8.0.20",
    "@types/photoswipe": "4.0.28",
    "@types/vinyl": "2.0.0",
    "@types/yargs": "8.0.2",

    "autoprefixer": "7.1.2",
    "copyfiles": "1.2.0",
    "lite-server": "2.3.0",
    "node-sass": "4.5.3",
    "postcss-cli": "4.1.0",
    "sass-lint": "1.10.2",
    "tslint": "5.6.0",
    "typescript": "2.4.2"
  },
  "dependencies": {
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-data": "1.2.1",
    "gulp-flatten": "0.3.1",
    "gulp-gray-matter": "3.0.1",
    "gulp-htmlmin": "3.0.0",
    "gulp-load-plugins": "1.5.0",
    "gulp-pug": "3.3.0",
    "gulp-rename": "1.2.2",
    "gulp-replace": "0.6.1",
    "gulp-sitemap": "4.2.0",

    "jquery": "3.2.1",
    "jstransformer-marked": "1.0.2",
    "lunr": "2.1.2",
    "marked": "0.3.6",
    "moment": "2.18.1",
    "mvw-gallery": "1.0.7",
    "mvw-navigation": "2.0.4",
    "mvw-search-index": "2.1.2",
    "photoswipe": "4.1.2",
    "pug": "2.0.0-rc.3"
  },
  "scripts": {
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint -c tslint.json \"partials/scripts/**/*.ts\"",
    "clean": "rimraf ./build/ ./partials/{styles,scripts}/**/*.{css,js}",

    "precompile": "npm run clean && mkdir build",
    "compile": "tsc && npm run compile:sass && gulp",
    "compile:sass": "node-sass ./partials/styles/ -o ./partials/styles && postcss ./partials/styles/**/*.css --use autoprefixer -r",
    "compile:gallery": "mvwGallery ./gallery-source/ ./root/gallery/",

    "copy:lib": "copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js ./build/js/",
    "copy:root": "copyfiles -u 2 ./root/_*/* ./build/ && copyfiles -u 1 -a ./root/[!_]* ./build/ && copyfiles -u 1 ./root/[!_]*/**/* ./build/",
    "postcompile": "npm run copy:lib && npm run copy:root",

    "prerelease": "npm run lint",
    "release": "npm run compile -- release --release=true",
    "postrelease": "mvw-search-index ./build/**/*.html ./build/index.json main",

    "copy:todiff": "copyup ./build/**/* ../wollbach-prod/",

    "dev": "npm run compile",
    "serve": "lite-server"
  }
}
